{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.workingDirectories": [
    {
      "pattern": "apps/*/"
    },
    {
      "pattern": "packages/*/"
    },
    {
      "pattern": "tooling/*/"
    }
  ],
  "eslint.useFlatConfig": true,
  "json.schemas": [
    {
      "fileMatch": [
        "package.json",
        "tsup.config.json"
      ],
      "url": "https://cdn.jsdelivr.net/npm/tsup/schema.json"
    }
  ],
  "tailwindCSS.experimental.classRegex": [
    [
      "cva\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "cx\\(([^)]*)\\)",
      "(?:'|\"|`)([^']*)(?:'|\"|`)"
    ]
  ],
  "tailwindCSS.experimental.configFile": "../apps/qualia/tailwind.config.js",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.autoImportFileExcludePatterns": [
    "@radix-ui/react-slot",
    "@radix-ui/react-dialog"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#202e4b",
    "activityBar.background": "#202e4b",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#9c4360",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#202e4b",
    "sideBar.border": "#202e4b",
    "statusBar.background": "#111827",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#202e4b",
    "statusBarItem.remoteBackground": "#111827",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#111827",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#11182799",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#111827"
}